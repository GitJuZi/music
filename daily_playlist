      console.log("âŒ JSONè§£æžå¤±è´¥ï¼š" + e);
      console.log("è¿”å›žå†…å®¹ï¼š" + data);
      $notification.post("ç½‘æ˜“äº‘æ’­æ”¾è„šæœ¬", "âŒ è§£æžé”™è¯¯", "è¯·ç¡®è®¤Cookieæœ‰æ•ˆ");
