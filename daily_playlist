      const trackIds = res.playlist.trackIds.slice(0, 30);
      console.log(`ðŸ“€ æˆåŠŸèŽ·å– ${trackIds.length} é¦–æ­Œæ›²ï¼Œå¼€å§‹æ¨¡æ‹Ÿæ’­æ”¾...`);
      playTracks(trackIds, 0);
